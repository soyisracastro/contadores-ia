---
interface Props {
  id: string;
  name: string;
  type?: 'text' | 'email' | 'password' | 'number';
  label: string;
  placeholder?: string;
  required?: boolean;
  disabled?: boolean;
  readonly?: boolean;
  maxlength?: number;
  helperText?: string;
  class?: string;
}

const {
  id,
  name,
  type = 'text',
  label,
  placeholder,
  required = false,
  disabled = false,
  readonly = false,
  maxlength,
  helperText,
  class: className = ''
} = Astro.props;
---

<div class:list={['input-wrapper', className]}>
  <label for={id} class="input-label">
    {label}
    {required && <span class="text-red-500">*</span>}
  </label>
  <input
    id={id}
    name={name}
    type={type}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    readonly={readonly}
    maxlength={maxlength}
    class="input-field"
  />
  {helperText && (
    <p class="input-helper-text">
      {helperText}
    </p>
  )}
</div>

<style>
  .input-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .input-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
  }

  :global(.dark) .input-label {
    color: #E1E1E1;
  }

  .input-field {
    display: block;
    width: 100%;
    padding: 0.5rem 0.75rem;
    border: 1px solid #D1D5DB;
    border-radius: 0.375rem;
    background-color: white;
    color: #111827;
    font-size: 0.875rem;
    transition: all 0.2s ease;
  }

  .input-field:focus {
    outline: none;
    border-color: #9400FF;
    box-shadow: 0 0 0 3px rgba(148, 0, 255, 0.1);
  }

  .input-field:disabled {
    background-color: #F3F4F6;
    color: #9CA3AF;
    cursor: not-allowed;
  }

  .input-field:read-only {
    background-color: #F9FAFB;
    color: #6B7280;
  }

  :global(.dark) .input-field {
    background-color: rgba(0, 0, 0, 0.5);
    border-color: rgba(148, 0, 255, 0.3);
    color: #E1E1E1;
  }

  :global(.dark) .input-field:focus {
    border-color: #00FFFF;
    box-shadow: 0 0 0 3px rgba(0, 255, 255, 0.1);
  }

  :global(.dark) .input-field:disabled {
    background-color: rgba(0, 0, 0, 0.3);
    color: #6B7280;
  }

  :global(.dark) .input-field:read-only {
    background-color: rgba(0, 0, 0, 0.4);
    color: #9CA3AF;
  }

  .input-helper-text {
    font-size: 0.75rem;
    color: #6B7280;
  }

  :global(.dark) .input-helper-text {
    color: #9CA3AF;
  }
</style>
