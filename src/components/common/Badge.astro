---
interface Props {
  variant?: 'premium' | 'tag' | 'status' | 'info';
  class?: string;
}

const {
  variant = 'tag',
  class: className = ''
} = Astro.props;
---

<span
  class:list={[
    'badge',
    `badge-${variant}`,
    className
  ]}
>
  <slot />
</span>

<style>
  /* ===== BASE BADGE STYLES ===== */
  .badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    transition: all 0.3s ease;
  }

  /* ===== PREMIUM BADGE ===== */
  .badge-premium {
    background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
    color: #000;
    text-shadow: 0 0 5px rgba(255, 215, 0, 0.5);
  }

  :global(.dark) .badge-premium {
    box-shadow: 0 0 15px rgba(255, 215, 0, 0.5);
  }

  /* ===== TAG BADGE ===== */
  .badge-tag {
    background: rgba(148, 0, 255, 0.1);
    color: #9400FF;
    border: 1px solid rgba(148, 0, 255, 0.2);
  }

  .badge-tag:hover {
    background: rgba(148, 0, 255, 0.2);
    border-color: rgba(148, 0, 255, 0.4);
  }

  :global(.dark) .badge-tag {
    background: rgba(0, 255, 255, 0.1);
    color: #00FFFF;
    border-color: rgba(0, 255, 255, 0.3);
  }

  :global(.dark) .badge-tag:hover {
    background: rgba(0, 255, 255, 0.2);
    border-color: rgba(0, 255, 255, 0.5);
    box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
  }

  /* ===== STATUS BADGE ===== */
  .badge-status {
    background: rgba(34, 197, 94, 0.1);
    color: #16a34a;
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  :global(.dark) .badge-status {
    background: rgba(34, 197, 94, 0.2);
    color: #4ade80;
    border-color: rgba(34, 197, 94, 0.3);
  }

  /* ===== INFO BADGE ===== */
  .badge-info {
    background: rgba(59, 130, 246, 0.1);
    color: #2563eb;
    border: 1px solid rgba(59, 130, 246, 0.2);
  }

  :global(.dark) .badge-info {
    background: rgba(59, 130, 246, 0.2);
    color: #60a5fa;
    border-color: rgba(59, 130, 246, 0.3);
  }
</style>
