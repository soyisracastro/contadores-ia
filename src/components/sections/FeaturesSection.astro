---
import FeatureCard from '../cards/FeatureCard.astro';

interface Feature {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  title: string;
  features: Feature[];
  class?: string;
}

const {
  title,
  features,
  class: className = ''
} = Astro.props;
---

<section class:list={['features-section py-20', className]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="section-title text-4xl font-bold text-center mb-16">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map((feature) => (
        <FeatureCard
          icon={feature.icon}
          title={feature.title}
          description={feature.description}
        />
      ))}
    </div>
  </div>
</section>

<style>
  /* ===== FEATURES SECTION ===== */
  .features-section {
    background-color: #F3F3F3;
  }

  :global(.dark) .features-section {
    background-color: #000000;
  }

  .section-title {
    color: #22223B;
  }

  :global(.dark) .section-title {
    background: linear-gradient(135deg, #9400FF 0%, #00FFFF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
